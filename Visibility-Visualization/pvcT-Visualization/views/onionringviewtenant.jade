      background: #ff1a66;
      padding: 5px 0;
      text-align: center;
      }
      .sdncontrollerbodydiv{
      position: relative;
      top: 5px;
      left: 1px;
      width: 230px;
      height: 80px;
      border: 1px solid #999999;
      background: #ffffff;
      overflow-y:scroll;
      }
      .controllertable {
      width: 100%;
      background-color: #f1f1c1;
      }
      .controllertable tr:nth-child(even) {
      background-color: #eee;
      }
      .controllertable tr:nth-child(odd) {
      background-color: #fff;
      }
      .controllertable th {
      color: white;
      background-color: black;
      }
