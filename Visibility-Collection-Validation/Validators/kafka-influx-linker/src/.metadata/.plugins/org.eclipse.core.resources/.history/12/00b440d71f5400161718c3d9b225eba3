<?xml version="1.0" encoding="UTF-8"?>
<Configuration package="chainlinker" status="ALL">
	<Appenders>
		<RollingFile name="RollingFileTracer" fileName="/tmp/logs/chainlinker-tracer.log"
			filePattern="logs/chainlinker-%d{MM-dd-yyyy}.log.gz"
			ignoreExceptions="false">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
		<RollingFile name="RollingFileDebug" fileName="/tmp/logs/chainlinker-debug.log"
			filePattern="logs/chainlinker-%d{MM-dd-yyyy}.log.gz"
			ignoreExceptions="false">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="LogTracer" level="trace">
			<AppenderRef ref="RollingFileTracer" />
		</Logger>
		<Logger name="LogDebug" level="trace">
			<AppenderRef ref="RollingFileTracer" />
		</Logger>
		<Root level="trace">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFileTracer" />
			<AppenderRef ref="RollingFileDebug" />
		</Root>
	</Loggers>
</Configuration>