<?xml version="1.0" encoding="UTF-8"?>
<Configuration package="chainlinker" status="ALL">
	<Appenders>
 		<RollingFile name="RollingFileTrace" fileName="logs/chainlinker-trace.log"
			filePattern="logs/chainlinker-%d{MM-dd-yyyy}.log.gz"
			ignoreExceptions="false">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
 		<RollingFile name="RollingFile" fileName="logs/chainlinker-trace.log"
			filePattern="logs/chainlinker-%d{MM-dd-yyyy}.log.gz"
			ignoreExceptions="false">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<TimeBasedTriggeringPolicy />
		</RollingFile>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="RollingFile" level="trace"/>
			<AppenderRef ref="Console" level="debug"/>
		</Root>
	</Loggers>
</Configuration>